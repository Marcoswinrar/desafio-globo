@import "kouto-swiss"
normalize()

red = #a80000
darkRed = darken(red, 25%)

header
    background: red
    border-bottom: 3px solid darkRed
    height: 75px

.container
    gs()

.form-search
    float: right
    fieldset
        border: none
        margin: 0
        padding-top: 18px
    .glass
        position: absolute;
        top: 19px
        background-image: url(/img/sprite_suggest.png);
        background-position: 8px -55px;
        background-size: 300px 85px;
        width: 26px
        height: 34px
        float: left
    .input-search
        color: white
        font-size: 14px
        font-weight: bold
        height: 33px
        width: 129px
        transition: width 500ms
        border-radius: 4px
        padding-left: 30px
        outline: 0
        border: 1px solid
        border-bottom-color: #c20000;
        border-left-color: #650000;
        border-right-color: #8e0000;
        border-top-color: #5b0000;
        background-color: darkRed
        box-shadow: inset 0 1px 0 0 darken(red, 25%)
        +placeholder()
            color: white
        &:focus
            width: 166px
            background: white
            color: #333
            +placeholder()
                color: #999
            &+label
                background-position: 8px -30px

.list-suggestions
    top: 60px;
    right: 215px
    width: 270px
    background: white
    border: none
    border-radius: 4px
    box-shadow: 0 0 5px 3px rgba(0,0,0,.2)
    position: absolute
    padding-top: 5px
    z-index: 99
    &:before
        position: absolute
        width: 299px;
        height: 23px;
        top: -21px;
        left: -14px;
        content: ' ';
        background-image: url(/img/sprite_suggest.png);
        background-position: 0 -3px;
        background-size: 300px 85px;
        z-index: 10;

